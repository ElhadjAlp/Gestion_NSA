@model Gestion_NSA.Models.ProduitCommande

@{
    ViewData["Title"] = Model.CommandeId == 0 && Model.ProduitId == 0 ? "Ajouter une association" : "Modifier l'association";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Save">
    <div class="form-group">
        <label asp-for="CommandeId" class="form-label"></label>
        <input asp-for="CommandeId" class="form-control" />
        <span asp-validation-for="CommandeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProduitId" class="form-label"></label>
        <input asp-for="ProduitId" class="form-control" />
        <span asp-validation-for="ProduitId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantite" class="form-label"></label>
        <input asp-for="Quantite" class="form-control" />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>
