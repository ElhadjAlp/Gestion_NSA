@model IEnumerable<Gestion_NSA.Models.Commande>

<h2>Liste des Commandes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var commande in Model)
        {
            <tr>
                <td>@commande.Date.ToShortDateString()</td>
                <td>@commande.Montant</td>
                <td>@commande.Client?.Nom</td>
                <td>
                    <a asp-action="Details" asp-route-id="@commande.Id">Voir</a> |
                    <a asp-action="Edit" asp-route-id="@commande.Id">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@commande.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Ajouter une commande</a>
