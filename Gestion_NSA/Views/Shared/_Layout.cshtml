<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion_NSA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_NSA.styles.css" asp-append-version="true" />
   
</head>
<body>
    <div class="d-flex">
        <!-- Menu Latéral -->
        <nav class="sidebar bg-light">
            <div class="d-flex justify-content-center mb-4 p-3">
                <a href="/" class="text-2xl font-semibold text-decoration-none text-dark">
                    Gestion_NSA
                </a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Clients">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Commande">Commande</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Livraison">Livraison</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Livreur">Livreur</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PaiementProduit">Paiement Produit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ProduitCommande">Produit Commande</a>
                </li>
            </ul>
        </nav>

        <!-- Contenu principal -->
        <div class="content flex-grow-1">
            <header class="d-flex justify-content-between align-items-center p-3 bg-light">
                <h1>@ViewData["Title"]</h1>
            </header>
            <main class="container mt-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center py-3">
            &copy; 2024 - Gestion_NSA - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
